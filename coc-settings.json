{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "markdown",
    "javascript"
  ],
  "suggest.noselect": false,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      },
      "disabled": {
        "workspaceFolders": false
      }
    }
  }
}
